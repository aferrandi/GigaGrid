@import "Util.styl"

div.giga-grid
  position relative
  margin 0
  font-family Roboto, sans-serif

  span.giga-grid-button
    padding 5px
    cursor pointer
    hover-transition()

  table
    border-collapse collapse
    font-size 11px

  table.header-table
    table-layout fixed

  div.giga-grid-body-viewport
    overflow scroll
    display inline-block // this allow the viewport to be as wide as the canva
    max-width 100%

  div.giga-grid-header-container
    max-width 100%
    overflow hidden

  tr td, tr th
    box-sizing border-box
    padding 2px 5px
    min-width 8em

  th:last-child, td:last-child
    padding-right 10px

  th:first-child, td:first-child
    padding-left 10px

  tr th
    font-weight normal

  tr th.column-group
    text-align center

  tr td
    white-space: nowrap

  tr td i:hover
    cursor pointer

  thead tr:hover
    cursor pointer

  .text-align-right
    text-align right

  .text-align-left
    text-align left
