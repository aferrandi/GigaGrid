@import "dropdown-menu"

main-color = #4a5564
header-text-color=#fff
cell-border-color = #f5f5f5
selected-color = rgba(74, 85, 100, 0.50)
subtotal-color = #fff
subtotal-selected-color = rgba(74, 85, 100, 0.65)

div.giga-grid
  margin 0
  font-family Roboto, sans-serif
  color #333
  overflow-x scroll

  table
    border-collapse collapse
    font-size 11px

  div.giga-grid-body-viewport
    overflow-y scroll
    overflow-x hidden
    display inline-block // this allow the viewport to be as wide as the canva

  tr.selected
    background-color selected-color

  tr.subtotal-row.selected
    background-color subtotal-selected-color

  tr td, tr th
    box-sizing border-box
    padding 2px 5px
    min-width 10em

  th:last-child, td:last-child
    padding-right 10px

  th:first-child, td:first-child
    padding-left 10px

  tr th
    font-weight normal
    background-color: main-color
    color header-text-color
    border-left: 1px solid white

  tr th.column-group
    text-align center
    border-right 1px solid cell-border-color
    border-bottom 1px solid cell-border-color

  tr td
    white-space: nowrap
    border 1px solid cell-border-color
    border-right none
    border-left none

  tr.subtotal-row
    background-color subtotal-color

  thead tr:hover, tbody tr:hover
    cursor pointer

  tbody tr:hover
    background-color selected-color

  tr.subtotal-row:hover
    background-color subtotal-selected-color

  .numeric
    text-align right

  .non-numeric
    text-align left

  span.header-text
    padding-right: 15px