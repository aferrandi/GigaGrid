div.giga-grid
  font-family Roboto, sans-serif

  table
    border-collapse collapse
    font-size 13px
    width: 100%

  tr td, tr th
    padding 8px 2px

  th:last-child, td:last-child
    padding-right 10px

  th:first-child, td:first-child
    padding-left 10px

  tr th
    font-weight normal
    color #fff
    background-color #0288d1

  tr td
    color #333
    border 1px solid #e0e0e0
    border-right none
    border-left none

  tr.subtotal-row
    background-color #efefef

  tr:hover
    cursor pointer
    background-color #efefef

  tr.subtotal-row:hover
    background-color #666
    td
      color #fff

  .numeric
    text-align right

  .non-numeric
    text-align left
