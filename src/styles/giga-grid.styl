div.giga-grid
  font-family Roboto, sans-serif
  color #333

  table
    border-collapse collapse
    font-size 13px
    width: 100%

  tr td, tr th
    padding 8px 2px

  th:last-child, td:last-child
    padding-right 10px

  th:first-child, td:first-child
    padding-left 10px

  tr th
    font-weight bold
    border-bottom 2px solid #555

  tr td
    border 1px solid #f5f5f5
    border-right none
    border-left none

  tr.subtotal-row
    background-color #f5f5f5

  thead tr:hover, tbody tr:hover
    cursor pointer

  tbody tr:hover
    background-color #f5f5f5

  tr.subtotal-row:hover
    background-color #ECE9E9

  .numeric
    text-align right

  .non-numeric
    text-align left
